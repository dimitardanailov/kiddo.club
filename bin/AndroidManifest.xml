<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kiddo.club"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />
    
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kiddo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                 <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoMainActivity"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoDoctorActivity"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoVideoCameraActivity"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoKinderKitchensActivity"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".SoundLevel"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoNannies"/>
        
        <activity
            android:configChanges="orientation"
			android:screenOrientation="portrait"
            android:name=".KiddoForumActivity"/>
        
    </application>

</manifest>
